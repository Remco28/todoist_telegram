{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://todoist-mcp.local/contracts/query_response.schema.json",
  "title": "QueryResponseV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "mode",
    "answer",
    "confidence"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "query.v1"
    },
    "mode": {
      "type": "string",
      "const": "query"
    },
    "answer": {
      "type": "string",
      "minLength": 1,
      "maxLength": 4000
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "highlights": {
      "type": "array",
      "maxItems": 8,
      "items": {
        "type": "string",
        "maxLength": 200
      }
    },
    "citations": {
      "type": "array",
      "maxItems": 30,
      "items": {
        "$ref": "#/$defs/citation"
      }
    },
    "suggested_actions": {
      "type": "array",
      "maxItems": 6,
      "items": {
        "$ref": "#/$defs/suggestedAction"
      }
    },
    "surfaced_entity_ids": {
      "type": "array",
      "maxItems": 30,
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Optional convenience list for short-lived recent-context cache."
    },
    "follow_up_question": {
      "type": "string",
      "maxLength": 240
    }
  },
  "$defs": {
    "citation": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "entity_type",
        "entity_id"
      ],
      "properties": {
        "entity_type": {
          "type": "string",
          "enum": [
            "task",
            "problem",
            "goal",
            "summary",
            "inbox_item"
          ]
        },
        "entity_id": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "maxLength": 120
        }
      }
    },
    "suggestedAction": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "kind",
        "description"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "ask_clarification",
            "refresh_plan",
            "create_task",
            "update_task",
            "link_entities"
          ]
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 240
        },
        "payload": {
          "type": "object",
          "description": "Optional action hint for backend routing."
        }
      }
    }
  }
}
